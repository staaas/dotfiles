# Workaround that sets DPI 96x96 in XWayland
# (see https://github.com/swaywm/sway/issues/3499)
exec xrdb -load ~/.Xresources

set $mod Mod4

font pango:Terminus 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# misc
focus_follows_mouse no
workspace_auto_back_and_forth no

{% macro bindsym_multi(keys) -%}
{% for key in keys %}
bindsym {{ caller(key) }}
{%- endfor %}
{%- endmacro %}

# start a terminal
bindsym $mod+Return exec term

# kill focused window
{% call(key) bindsym_multi(['c', 'Cyrillic_es']) %}
$mod+Shift+{{key}} kill
{% endcall %}

# start dmenu (a program launcher)
set $menu dmenu_run
{% call(key) bindsym_multi(['d', 'Cyrillic_ve']) %}
$mod+{{key}} exec $menu
{% endcall %}

# change focus
{% call(key) bindsym_multi(['j', 'Cyrillic_o']) %}
$mod+{{key}} focus left
{% endcall %}
{% call(key) bindsym_multi(['k', 'Cyrillic_el']) %}
$mod+{{key}} focus down
{% endcall %}
{% call(key) bindsym_multi(['l', 'Cyrillic_de']) %}
$mod+{{key}} focus up
{% endcall %}
{% call(key) bindsym_multi(['semicolon', 'Cyrillic_zhe']) %}
$mod+{{key}} focus right
{% endcall %}

# move focused window
{% call(key) bindsym_multi(['j', 'Cyrillic_o']) %}
$mod+Shift+{{key}} move left
{% endcall %}
{% call(key) bindsym_multi(['k', 'Cyrillic_el']) %}
$mod+Shift+{{key}} move down
{% endcall %}
{% call(key) bindsym_multi(['l', 'Cyrillic_de']) %}
$mod+Shift+{{key}} move up
{% endcall %}
{% call(key) bindsym_multi(['colon', 'Shift+Cyrillic_zhe']) %}
$mod+{{key}} move right
{% endcall %}

# split in horizontal orientation
{% call(key) bindsym_multi(['h', 'Cyrillic_er']) %}
$mod+{{key}} split h
{% endcall %}

# split in vertical orientation
{% call(key) bindsym_multi(['v', 'Cyrillic_em']) %}
$mod+{{key}} split v
{% endcall %}

# enter fullscreen mode for the focused container
{% call(key) bindsym_multi(['f', 'Cyrillic_a']) %}
$mod+{{key}} fullscreen toggle
{% endcall %}

# change container layout (stacked, tabbed, toggle split)
{% call(key) bindsym_multi(['s', 'Cyrillic_yeru']) %}
$mod+{{key}} layout stacking
{% endcall %}
{% call(key) bindsym_multi(['w', 'Cyrillic_tse']) %}
$mod+{{key}} layout tabbed
{% endcall %}
{% call(key) bindsym_multi(['e', 'Cyrillic_u']) %}
$mod+{{key}} layout toggle split
{% endcall %}

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
{% call(key) bindsym_multi(['a', 'Cyrillic_ef']) %}
$mod+{{key}} focus parent
{% endcall %}

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym $mod+Escape workspace back_and_forth

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

{% call(key) bindsym_multi(['j', 'Cyrillic_o']) %}
$mod+Control+{{key}} move workspace to output left
{% endcall %}
{% call(key) bindsym_multi(['k', 'Cyrillic_el']) %}
$mod+Control+{{key}} move workspace to output down
{% endcall %}
{% call(key) bindsym_multi(['l', 'Cyrillic_de']) %}
$mod+Control+{{key}} move workspace to output up
{% endcall %}
{% call(key) bindsym_multi(['semicolon', 'Cyrillic_zhe']) %}
$mod+Control+{{key}} move workspace to output right
{% endcall %}

# reload the configuration file
{% call(key) bindsym_multi(['r']) %}
$mod+Shift+{{key}} reload
{% endcall %}
# exit sway (logs you out of your Wayland session)
{% call(key) bindsym_multi(['e']) %}
$mod+Shift+{{key}} exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
{% endcall %}

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        {% call(key) bindsym_multi(['j', 'Cyrillic_o']) %}
{{key}} resize shrink width 10 px or 10 ppt
        {% endcall %}
        {% call(key) bindsym_multi(['k', 'Cyrillic_el']) %}
{{key}} resize grow height 10 px or 10 ppt
        {% endcall %}
        {% call(key) bindsym_multi(['l', 'Cyrillic_de']) %}
{{key}} resize shrink height 10 px or 10 ppt
        {% endcall %}
        {% call(key) bindsym_multi(['semicolon', 'Cyrillic_zhe']) %}
{{key}} resize grow width 10 px or 10 ppt
        {% endcall %}

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

{% call(key) bindsym_multi(['r']) %}
$mod+{{key}} mode "resize"
{% endcall %}

# misc key bindings
bindsym $mod+backslash exec --no-startup-id swaylock -e -n -c 002b36
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 10
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 10
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer --increase 5
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer --decrease 5
bindsym XF86AudioMute exec --no-startup-id pamixer --toggle-mute
bindsym XF86AudioMicMute exec --no-startup-id pamixer --default-source --toggle-mute
bindsym $mod+Up exec --no-startup-id term -e ncmpc
bindsym $mod+Down exec --no-startup-id mpc toggle
bindsym $mod+Left exec --no-startup-id mpc prev
bindsym $mod+Right exec --no-startup-id mpc next
{% call(key) bindsym_multi(['p', 'Cyrillic_ze']) %}
$mod+Shift+{{key}} exec scrot -z -e 'mv $f /tmp/ && gimp /tmp/$f' --release
{% endcall %}
{% call(key) bindsym_multi(['n', 'Cyrillic_te']) %}
$mod+{{key}} exec makoctl dismiss
{% endcall %}
{% call(key) bindsym_multi(['n', 'Cyrillic_te']) %}
$mod+Shift+{{key}} makoctl invoke
{% endcall %}

# Start swaybar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status --config ~/.config/i3/status.conf
        position top
        tray_output eDP1
        colors {
            separator #586e75
            background #000000
            statusline #ffffff
            focused_workspace #586e75 #586e75 #ffffff
            active_workspace #073642 #073642 #ffffff
            inactive_workspace #002b36 #002b36 #aea79f
            urgent_workspace #77216f #77216f #ffffff
        }
}

output * bg #000000 solid_color

# class                 border  backgr. text    indicator child_border
client.focused          #586e75 #586e75 #fdf6e3 #268bd2   #586e75
client.focused_inactive #073642 #073642 #93a1a1 #002b36   #073642
client.unfocused        #002b36 #002b36 #586e75 #002b36   #002b36
client.urgent           #dc322f #dc322f #fdf6e3 #dc322f   #dc322f

input 1:1:AT_Translated_Set_2_keyboard {
    xkb_layout us,by,ru
    xkb_options grp:caps_toggle
}

exec_always mako
exec swayidle timeout 300 'swaylock -e -n -c 002b36' timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' before-sleep 'swaylock -e -n -c 002b36'
exec light -P 5
